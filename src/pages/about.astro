  { name: "Pandas", level: 70, category: "Libraries" },
  { name: "Cuda", level: 70, category: "Frameworks" },
  { name: "C and Compilers", level: 90, category: "Languages" },
];

const interests = [
  { 
    emoji: "üìö", 
    title: "Reading", 
    description: "Sci-fi novels and technical books",
    colSpan: "md:col-span-1",
    rowSpan: "md:row-span-1"
  },/*
  { 
    emoji: "üé∏", 
    title: "Music", 
    description: "Playing guitar and exploring different genres",
    colSpan: "md:col-span-1",
    rowSpan: "md:row-span-1"
  },
  { 
    emoji: "üèÉ", 
    title: "Running", 
    description: "Marathon training and outdoor adventures",
    colSpan: "md:col-span-1",
    rowSpan: "md:row-span-1"
  },
  { 
    emoji: "üé®", 
    title: "Design", 
    description: "UI/UX and visual aesthetics",
    colSpan: "md:col-span-1",
    rowSpan: "md:row-span-1"
  },*/
];

const bioContent = {
  colSpan: "md:col-span-2",
  rowSpan: "md:row-span-2"
};

const skillsContent = {
